<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mainViewModel"
            type="com.jinwoo.catchmindandroid.MainViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#648CBA">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/round_white">
            <FrameLayout
                android:id="@+id/drawlayout"
                android:background="@drawable/round_white"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/info_layout"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp">
            </FrameLayout>
            <android.support.constraint.ConstraintLayout
                android:background="@drawable/round_white"
                android:elevation="10dp"
                android:id="@+id/info_layout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/round_layout"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/round"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@{mainViewModel.round}"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/round_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/otherscore_layout"
                    android:id="@+id/myscore_layout"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/myscore"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="@{mainViewModel.myScore}"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    app:layout_constraintLeft_toRightOf="@id/myscore_layout"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/round_layout"
                    android:id="@+id/otherscore_layout"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/otherscore"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="@{mainViewModel.otherScore}"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center"/>
                </LinearLayout>
                <android.support.constraint.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/myscore_layout"
                    android:id="@+id/palette_layout"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="15dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/red_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorRed"
                        android:onClick="@{()->mainViewModel.colorClick(0)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/pink_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorPink"
                        android:onClick="@{()->mainViewModel.colorClick(1)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/orange_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorOrange"
                        android:onClick="@{()->mainViewModel.colorClick(2)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/yellow_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorYellow"
                        android:onClick="@{()->mainViewModel.colorClick(3)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/yellow_green_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorYellowGreen"
                        android:onClick="@{()->mainViewModel.colorClick(4)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/green_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorGreen"
                        android:onClick="@{()->mainViewModel.colorClick(5)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/sky_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorSky"
                        android:onClick="@{()->mainViewModel.colorClick(6)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/light_purple_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorLightPurple"
                        android:onClick="@{()->mainViewModel.colorClick(7)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/purple_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorPurple"
                        android:onClick="@{()->mainViewModel.colorClick(8)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/amethyst_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorAmethyst"
                        android:onClick="@{()->mainViewModel.colorClick(9)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/gray_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorGray"
                        android:onClick="@{()->mainViewModel.colorClick(10)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/black_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@color/colorBlack"
                        android:onClick="@{()->mainViewModel.colorClick(11)}">
                    </de.hdodenhof.circleimageview.CircleImageView>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/timer_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:elevation="10dp"
            android:padding="10dp">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/timer"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#648CBA"
                android:fontFamily="@font/nanumsquarebold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/word_layout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_word_blue"
            android:elevation="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{mainViewModel.word}"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nanumsquarebold"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <Button
            android:fontFamily="@font/nanumsquarebold"
            android:textSize="18dp"
            android:text="지우개"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:elevation="10dp"
            android:id="@+id/eraser"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white"
            android:onClick="@{()->mainViewModel.eraserClick()}"/>
    </android.support.constraint.ConstraintLayout>
</layout>